<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:layout_gravity="top"
    android:focusable="true"
    android:clickable="true">

    <TextView
        android:id="@+id/resultName"
        android:layout_height="21dp"
        android:layout_width="0dp"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"
        android:text="Random Course Title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/resultECTS"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/resultTermYear"
        app:layout_constraintHorizontal_bias="0.50"
        android:textStyle="normal|bold" />


    <TextView
        android:text="8 ECTS"
        android:id="@+id/resultECTS"
        android:layout_height="21dp"
        android:layout_width="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal|bold" />

    <TextView
        android:text="i8.0000"
        android:layout_width="54dp"
        android:layout_height="21dp"
        android:id="@+id/resultStudIP"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="S17"
        android:layout_width="32dp"
        android:layout_height="21dp"
        android:id="@+id/resultTermYear"
        android:textAppearance="@android:style/TextAppearance.Material.Menu"
        android:textStyle="normal|bold"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/resultStudIP"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp" />

    <TextView
        android:text="CourseType by Lecturer one, Lecturer the second one, Some PHD probably"
        android:layout_width="0dp"
        android:id="@+id/resultLecturers"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/resultName"
        android:layout_height="17dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="in Module 1, Module the second, Module thrice the fun"
        android:layout_width="0dp"
        android:id="@+id/resultFields"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/resultLecturers"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_height="17dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="74dp"
        tools:layout_editor_absoluteX="205dp"
        android:id="@+id/resultDescriptionHolder"
        android:visibility="gone" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="74dp"
        tools:layout_editor_absoluteX="205dp"
        android:id="@+id/resultCourseType"
        android:visibility="gone" />


</android.support.constraint.ConstraintLayout>