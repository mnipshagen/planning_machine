<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:id="@+id/courseECTS"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/courseGrade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/courseState"
        app:layout_constraintVertical_bias="1.0"
        android:layout_height="130dp" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:id="@+id/courseGrade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/courseIn"
        app:layout_constraintBottom_toTopOf="@+id/courseState"
        app:layout_constraintVertical_bias="0.0"
        android:layout_height="130dp" />

    <ImageView
        android:layout_height="5dp"
        app:srcCompat="@color/markInProgress"
        android:id="@+id/courseState"
        app:layout_constraintTop_toBottomOf="@+id/courseGrade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="false"
        android:layout_width="0dp" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:id="@+id/courseIn"
        app:layout_constraintVertical_bias="1.0"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@+id/courseState"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/courseFields"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:id="@+id/courseFields"
        app:layout_constraintVertical_bias="1.0"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@+id/courseState"
        app:layout_constraintLeft_toRightOf="@+id/courseIn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp" />

