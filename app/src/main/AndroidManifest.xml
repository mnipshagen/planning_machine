<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mnipshagen.planning_machine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Activity_Splash"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Activity_Overview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Activity_Module"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Activity_Search"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Activity_About"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Activity_Settings"
            android:screenOrientation="portrait" />

        <provider
            android:name=".DataProviding.DataProvider"
            android:authorities="com.mnipshagen.planning_machine.DataProviding.DataProvider"
            android:exported="false"
            android:multiprocess="true" />

        <activity
            android:name=".Activities.HostActivity"
            android:label="@string/title_activity_host"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>